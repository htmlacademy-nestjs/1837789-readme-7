{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/account-config": ["libs/account/config/src/index.ts"],
      "@project/account-notify": ["libs/account/notify/src/index.ts"],
      "@project/api-config": ["libs/api/src/index.ts"],
      "@project/authentication": ["libs/account/authentication/src/index.ts"],
      "@project/blog-models": ["libs/blog/models/src/index.ts"],
      "@project/blog-user": ["libs/account/blog-user/src/index.ts"],
      "@project/comments": ["libs/blog/comments/src/index.ts"],
      "@project/core": ["libs/shared/core/src/index.ts"],
      "@project/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/email-subscriber": [
        "libs/notify/email-subscriber/src/index.ts"
      ],
      "@project/file-storage-config": ["libs/file-storage/config/src/index.ts"],
      "@project/file-uploader": [
        "libs/file-storage/file-uploader/src/index.ts"
      ],
      "@project/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/interceptors": ["libs/shared/interceptors/src/index.ts"],
      "@project/mail": ["libs/notify/mail/src/index.ts"],
      "@project/notify-config": ["libs/notify/config/src/index.ts"],
      "@project/notify-newsletter": [
        "libs/notify/notify-newsletter/src/index.ts"
      ],
      "@project/pipes": ["libs/shared/pipes/src/index.ts"],
      "@project/posts": ["libs/blog/posts/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
